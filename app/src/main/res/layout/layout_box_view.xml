<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        tools:text="2000"
        android:id="@+id/tv_box_view_sku" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="36"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_box_view_l" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_x1"
            android:textAlignment="center"
            android:text="@string/x"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="36"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_box_view_w" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_x2"
            android:textAlignment="center"
            android:text="@string/x"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="36"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_box_view_h" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:textAlignment="textEnd"
        android:textSize="17sp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        tools:text="25"
        android:id="@+id/tv_box_view_bundle_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/rv_prices" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textAlignment="textEnd"
        android:textSize="17sp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        tools:text="$0.74"
        android:id="@+id/tv_box_view_price" />

</androidx.appcompat.widget.LinearLayoutCompat>